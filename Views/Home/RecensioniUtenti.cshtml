
@{
    ViewBag.Title = "RecensioniUtenti";
}

<h2>RecensioniUtenti</h2>

<main>
    <div class="container">
        <h2 class="text-center my-5 text-white" style="font-family: 'Satisfy', cursive; font-weight: bold; font-size: 50px;">Recensioni degli Utenti</h2>
        <div class="row">
            @foreach (var recensione in ViewBag.Recensioni ?? Enumerable.Empty<Travel_Nest.Models.Recensioni>())
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title mb-3"><i class="fa-solid fa-user"></i> @recensione.Utenti.Email</h5>
                            <div class="rating mb-3">
                                @for (int i = 1; i <= recensione.Valutazione; i++)
                                {
                                    <span class="star" data-value="1"><i class="bi bi-star"></i></span>
                                }
                            </div>
                            <p class="card-text fw-bold m-0">Alloggio</p>
                            <p>@recensione.Alloggi.NomeAlloggio</p>
                            <p class="card-text fw-bold m-0">Recensione</p>
                            <p>@recensione.TestoRecensione</p>
                            <p class="card-text"><small class="text-muted">Data recensione: @recensione.DataRecensione.ToShortDateString()</small></p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</main>