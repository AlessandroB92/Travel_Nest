@model Travel_Nest.Models.Recensioni

@{
    ViewBag.Title = "Nuova Recensione";
}

<div id="login" class="row w-75 m-auto my-5 bg-light rounded-3">
    <h1 class="text-center mb-5 p-4 text-white rounded-top-3" style="font-family: 'Satisfy', cursive; font-weight: bold; font-size: 50px; background-color: #77ABF7;">Lascia il tuo Feedback</h1>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="col-12 text-center my-3">
            <div class="form-group">
                <label for="TestoRecensione" class="control-label mb-3 fw-bold fs-4">Recensione</label>
                <div class="d-flex justify-content-center">
                    @Html.TextAreaFor(model => model.TestoRecensione, new { @class = "form-control", rows = "4", style = "max-width: 600px;" })
                    @Html.ValidationMessageFor(model => model.TestoRecensione, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col text-center">
            <div class="form-group">
                <label for="Valutazione" class="control-label fw-bold fs-4">Valutazione</label>
                <div class="col m-4">
                    <div class="rating">
                        <span class="star" data-value="1"><i class="bi bi-star-fill"></i></span>
                        <span class="star" data-value="2"><i class="bi bi-star-fill"></i></span>
                        <span class="star" data-value="3"><i class="bi bi-star-fill"></i></span>
                        <span class="star" data-value="4"><i class="bi bi-star-fill"></i></span>
                        <span class="star" data-value="5"><i class="bi bi-star-fill"></i></span>
                    </div>
                    @Html.HiddenFor(model => model.Valutazione)
                    @Html.ValidationMessageFor(model => model.Valutazione, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group m-4">
                <div class="col">
                    <input type="submit" value="Salva" class="btn btn-primary" />
                </div>
            </div>
            <button class="btn btn-default mb-4">
                @Html.ActionLink("Indietro", "Index", null, new { @class = "text-decoration-none text-dark" })
            </button>
        </div>
    }

</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".star").click(function () {
                var value = $(this).data("value");
                $("#Valutazione").val(value);
                updateStars(value);
            });
            function updateStars(value) {
                $(".star").each(function () {
                    var starValue = $(this).data("value");
                    $(this).toggleClass("filled", starValue <= value);
                });
            }
        });
    </script>
}
