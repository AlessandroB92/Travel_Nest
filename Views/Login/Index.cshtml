@model Travel_Nest.Models.LoginModel

@{
    ViewBag.Title = "Login";
}

<h2 class="text-center bg-dark bg-opacity-25 py-3 mb-5 rounded-3">Login</h2>
@if (TempData["Message"] != null)
{
    <div class="alert alert-success text-center w-50 m-auto mb-5" role="alert">
        @TempData["Message"]
    </div>
}
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger text-center w-50 my-4 m-auto">@ViewBag.ErrorMessage</div>
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container d-flex align-content-center align-items-center flex-column">
        <div class="form-group d-flex flex-column align-items-center justify-content-center mb-3">
            @Html.TextBoxFor(m => m.Nome, new { @class = "form-control", placeholder = "Email" })
            @Html.ValidationMessageFor(m => m.Nome, "", new { @class = "text-danger" })
        </div>

        <div class="form-group d-flex flex-column align-items-center justify-content-center mb-3">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn btn-success mb-5">Login</button>
    </div>
}