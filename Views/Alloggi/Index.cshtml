@model IEnumerable<Travel_Nest.Models.Alloggi>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Lista Alloggi</h2>

<div class="text-center">
    <button type="button" class="btn btn-primary my-3" onclick="location.href='@Url.Action("Create")'">Create New</button>
</div>

<table class="table table-hover w-50 m-auto bg-light rounded-2">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomeAlloggio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Citta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrezzoPerNotte)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Disponibilita)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NomeAlloggio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Citta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrezzoPerNotte)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Disponibilita)
        </td>
        <td>
            <div class="d-flex justify-content-between">
                <button type="button" class="btn btn-info text-white mx-1" onclick="location.href='@Url.Action("Edit", new { id = item.IDAlloggio })'">Edit</button>
                <button type="button" class="btn btn-danger mx-1" onclick="location.href='@Url.Action("Delete", new { id = item.IDAlloggio })'">Delete</button>
            </div>
        </td>
    </tr>
}

</table>
