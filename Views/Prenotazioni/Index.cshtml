@model IEnumerable<Travel_Nest.Models.Prenotazioni>

@{
    ViewBag.Title = "Elenco Prenotazioni";
}

<div class="container py-5">
    <h1 class="text-center my-5 text-white" style="font-family: 'Satisfy', cursive; font-weight: bold; font-size: 50px;">Le tue prenotazioni</h1>
    @if (TempData["PrenotazioneCancellata"] != null)
    {
        <div class="alert alert-success text-center" role="alert">
            @TempData["PrenotazioneCancellata"]
        </div>
    }

    @if (!Model.Any())
    {
        <h3 class="text-center text-warning mb-5 p-4 bg-warning-subtle rounded-pill border border-2 border-warning">Al momento non hai nessuna prenotazione.</h3>
    }
    else
    {
        <div class="row mb-3">
            @foreach (var prenotazione in Model)
            {
                <div class="col-md-6 mb-4 m-auto">
                    <div id="login" class="card">
                        <div class="card-body">
                            <h5 class="card-title text-center mb-4 fw-bold" style="font-family: 'Satisfy', cursive; font-size: 30px; color: #77ABF7;">Riepilogo</h5>
                            <p class="text-center mb-3">
                                <strong>Alloggio:</strong> @prenotazione.Alloggi.NomeAlloggio<br />
                            </p>
                            <p class="mb-3 text-center">
                                <strong>Data Check-In:</strong> @prenotazione.DataCheckIn.ToShortDateString() <br />
                            </p>
                            <p class="mb-3 text-center">
                                <strong>Data Check-Out:</strong> @prenotazione.DataCheckOut.ToShortDateString() <br />
                            </p>
                            <p class="mb-3 text-center">
                                <strong>Stato:</strong> @prenotazione.StatoPrenotazione
                            </p>
                            <div class="d-flex justify-content-center">
                                <button class="btn btn-danger" onclick="location.href='@Url.Action("ConfermaEliminazione", new { id = prenotazione.IDPrenotazione })'">Elimina</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
